{
  "name": "Earthquake Response Flow",
  "description": "A workflow for students in case of earthquake.",
  "testTrigger": "https://plgs-demo1.mybluemix.net/trigger/testflow",
  "flow": [
    {
      "name": "Preparation",
      "blocks": [
      ]
    },
    {
      "name": "Alarm Events",
      "blocks": [
        {
          "id": "eew",
          "name": "Earthquake Early Warning",
          "style": "is-danger",
          "always": false,
          "message": "An earthquake with a magnitude over 6.0 hits the current location",
          "params": {
            "magnitude": 6.0
          }
        }
      ]
    },
    {
      "name": "Immediately After",
      "blocks": [
        {
          "id": "announce",
          "name": "Listen to Announcements",
          "style": "is-warning",
          "always": "Automatically added by ABC Univ. (uneditable)",
          "message": ""
        }
      ]
    },
    {
      "name": "Before Evacuation",
      "blocks": [
        {
          "id": "anpi",
          "name": "Respond Personal Safety Confirmation",
          "style": "is-warning",
          "always": "Automatically added by ABC Univ. (uneditable)",
          "message": "Receive the link to the system\n登録した人物の安否をプッシュ通知で受け取る\n自分の安否をTwitter/Facebookに自動投稿する"
        },
        {
          "id": "checklist",
          "name": "Confirm Safety Checklist",
          "style": "",
          "always": false,
          "message": "Your own todos and checklist before evacuation"
        },
        {
          "id": "checklist",
          "name": "Confirm Healthcare Checklist",
          "style": "",
          "always": false,
          "message": "Your own todos and checklist before evacuation"
        },
        {
          "id": "weather",
          "name": "Check Weather Forecast",
          "style": "",
          "always": false,
          "message": "Notify if it will rain"
        }
      ]
    },
    { "name": "Checkpoint: Evacuation Order" },
    {
      "name": "Evacuation",
      "blocks": [
        {
          "id": "evacuation-spot",
          "name": "Navigate to the Nearest Evacuation Spot",
          "style": "",
          "always": false,
          "message": "Open the map"
        }
      ]
    },
    { "name": "Checkpoint: Arrived to Evacuation Spot" },
    {
      "name": "Evacuation Life",
      "blocks": [
        {
          "id": "health",
          "name": "Check Health Condition",
          "style": "",
          "always": false,
          "message": "家族と自分に送信する"
        },
        {
          "id": "item",
          "name": "Request Necessities",
          "style": "",
          "always": false,
          "message": "リンクを送信"
        }
      ]
    },
    { "name": "Checkpoint: Confirm Flow End" }
  ]
}
